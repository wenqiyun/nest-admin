{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "cm/*": ["./src/common/*"],
      "_hooks": ["./src/hooks"],
      "k-ui": ["./src/plugins/k-ui"]
    },
    "types": ["vite/client", "element-plus/global"]
  }
}
